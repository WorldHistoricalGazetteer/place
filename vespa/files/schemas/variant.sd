schema variant {
    document variant {

        field place type string {
            # The ID of the place associated with the variant.
            indexing: summary
        }

        field toponym type string {
            # The ID of the toponym associated with the variant.
            indexing: summary
        }

        field year_start type int {
            # Start date of the attestation.
            indexing: summary
        }

        field year_end type int {
            # End date of the attestation.
            indexing: summary
        }

        field is_preferred type bool {
            # 1 if prefLabel
            indexing: summary
        }

        field is_preferred_GVP type bool {
            # 1 if prefLabelGVP
            indexing: summary
        }

    }
}
