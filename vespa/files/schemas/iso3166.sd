schema iso3166 {
    document iso3166 {
        # SW and NE coordinates of the bounding box: {sw: {lat, lng}, ne: {lat, lng}}
        struct bbox_struct {
            field sw type position {}
            field ne type position {}
        }
        field bbox type bbox_struct {
            indexing: summary
        }

        # Country name
        field name type string {
            indexing: attribute
            attribute: fast-search
        }

        # ISO Alpha-2 code (e.g., AW, AF)
        field code2 type string {
            indexing: attribute
            attribute: fast-search
        }

        # ISO Alpha-3 code (e.g., ABW, AFG)
        field code3 type string {
            indexing: attribute
            attribute: fast-search
        }

        # Geometry field (stored as a GeoJSON string)
        field geometry type string {
            indexing: summary
        }
    }

    # Default rank profile
    rank-profile default {
        first-phase {
            expression: nativeRank(name)
        }
    }
}