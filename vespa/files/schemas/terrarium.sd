schema terrarium {
    document terrarium {
        # SW and NE coordinates of the bounding box: [{lat, lng}, {lat, lng}]
        field bbox type array<position> {
            indexing: attribute
        }

        field resolution type float {
            indexing: attribute
            attribute: fast-search
        }

        field source type string {
            indexing: summary
        }

        # Geometry field (stored as a GeoJSON string)
        field geometry type string {
            indexing: summary
        }

        # Array of ISO Alpha-2 codes (e.g., AW, AF)
        field ccodes type array<string> {
            indexing: attribute
            attribute: fast-search
        }

    }

    rank-profile smallest_resolution {
        first-phase {
            expression: attribute(resolution)
        }
    }
}