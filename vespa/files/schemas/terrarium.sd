schema terrarium {
    document terrarium {
        # SW and NE coordinates of the bounding box: {sw: {lat, lng}, ne: {lat, lng}}
        struct coordinates {
            field lat type float {}
            field lng type float {}
        }
        struct bbox_struct {
            field sw type coordinates {}
            field ne type coordinates {}
        }
        field bbox type bbox_struct {
            indexing: summary
        }

        field resolution type float {
            indexing: attribute
            attribute: fast-search
        }

        field source type string {
            indexing: summary
        }

        # Geometry field (stored as a GeoJSON string)
        field geometry type string {
            indexing: summary
        }

        # Array of ISO Alpha-2 codes (e.g., AW, AF)
        field ccodes type array<string> {
            indexing: attribute
            attribute: fast-search
        }

    }

    rank-profile smallest_resolution {
        first-phase {
            expression: attribute(resolution)
        }
    }
}